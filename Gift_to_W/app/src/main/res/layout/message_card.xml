<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天好開心之九分之旅"
            android:layout_marginTop="@dimen/messagemargin"
            android:layout_marginLeft="@dimen/messagemargin"
            android:layout_marginRight="@dimen/messagemargin"
            android:textColor="@color/colorPrimary2"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/pic"
            android:src="@drawable/dining"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Sticker"
            android:background="@android:color/white"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hahahahhahahahhahahahhahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahahhahahah"
            android:layout_marginTop="@dimen/messagemargin"
            android:layout_marginLeft="@dimen/messagemargin"
            android:layout_marginRight="@dimen/messagemargin"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="17dp"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myline"
            android:layout_marginLeft="@dimen/messagemargin"
            android:layout_marginRight="@dimen/messagemargin"
            android:layout_marginTop="@dimen/messagemargin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/messagemargin"
            android:layout_marginRight="@dimen/messagemargin">
            <ImageView
                android:id="@+id/dots"
                android:src="@drawable/dots_fill_graydark"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/2/4 12:34:54"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>